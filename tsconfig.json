{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  /* path alias */
  "baseUrl": ".",
  "paths": {
    "@public/*": ["public/*"],
    "@src/*": ["src/*"],
    "@components/*": ["src/components/*"],
    "@pages/*": ["src/pages/*"],
    "@assets/*": ["src/assets/*"],
    "@styles/*": ["src/styles/*"],
    "@utils/*": ["src/utils/*"],
    "@api/*": ["src/api/*"],
    "@types/*": ["src/types/*"]
  },
  "include": ["src"]
}
